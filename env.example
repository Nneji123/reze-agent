# =============================================================================
# REZE AI AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Enable debug mode for development (true/false)
DEBUG=True

# Host and port for the FastAPI application
HOST=0.0.0.0
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry Error Tracking Configuration (Optional)
# Get your DSN from: https://docs.sentry.io/platforms/python/guides/fastapi/
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# GLM 4.7 AI SETTINGS (z.ai)
# =============================================================================
# GLM 4.7 API Key from z.ai
# Get your key from: https://open.bigmodel.cn/
GLM_API_KEY=your_glm_api_key_here

# GLM 4.7 Base URL
# Default OpenAI-compatible endpoint for z.ai
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# GLM Model to use
# Options: glm-4.7, glm-4, etc.
GLM_MODEL=glm-4.7

# =============================================================================
# RESEND.COM SETTINGS
# =============================================================================
# Resend API Key
# Get your key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Default sender email address
# Must be a verified domain in your Resend account
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Resend API Base URL
# Default: https://api.resend.com
RESEND_BASE_URL=https://api.resend.com

# =============================================================================
# MEMVID RAG SETTINGS
# =============================================================================
# Path to Memvid knowledge base file
# This file will be created on first run and stores all embeddings
MEMVID_FILE_PATH=./memory.mv2

# Memvid index kind
# Options: basic, advanced
MEMVID_INDEX_KIND=basic

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Primary database for conversation history and email logs
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./database

# For production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/reze

# Enable verbose SQL logging (true/false)
DATABASE_ECHO=false
